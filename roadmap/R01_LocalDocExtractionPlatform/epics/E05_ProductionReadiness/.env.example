# Environment Configuration
# Copy this to .env and update as needed for your local development

# Python
PYTHONUNBUFFERED=1

# Database
DATABASE_URL=postgresql://docextractor:dev_password@localhost:5432/docextractor_dev

# Ollama
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=mixtral
OLLAMA_MODEL_SIZE=8x7b

# OpenTelemetry
OTEL_TRACES_EXPORTER=otlp
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Application
APP_ENV=development
APP_DEBUG=true
APP_LOG_LEVEL=INFO

# Document Processing
MAX_DOCUMENT_SIZE_MB=100
BATCH_SIZE=10

# Embeddings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
